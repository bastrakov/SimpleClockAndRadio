<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackBlack"
    android:keepScreenOn="true"
    >

    <ImageView
        android:id="@+id/main_setting"
        style="@style/MainBtn"
        android:src="@drawable/ic_settings_white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:text="ads here"
        />

    <ImageView
        android:id="@+id/main_exit"
        style="@style/MainBtn"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/clock_padding_bottom"
        android:paddingLeft="60dp"
        android:paddingRight="80dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_clock"
                android:text="00:00"
                style="@style/ClockMain"/>

            <TextView
                android:id="@+id/main_day"
                android:text="12 month"
                style="@style/ClockDay"/>

            <TextView
                android:id="@+id/main_week_day"
                android:text="week-day"
                style="@style/ClockWeekDay"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_msg_list"
                style="@style/MainMsgList"
                android:text="@string/hello_msg"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/main_volume_down"
        android:layout_width="@dimen/volume_down_btn_size"
        android:layout_height="@dimen/volume_down_btn_size"
        android:padding="@dimen/main_volume_btn_padding"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_volume_down_white"/>

    <ImageView
        android:id="@+id/main_volume_up"
        android:layout_width="@dimen/volume_up_btn_size"
        android:layout_height="@dimen/volume_up_btn_size"
        android:padding="@dimen/main_volume_btn_padding"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_volume_up_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_play_btn_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_play1"
            style="@style/MainToggleBtn"
            android:text="1"/>

        <Button
            android:id="@+id/main_play2"
            style="@style/MainToggleBtn"
            android:text="2"/>

        <Button
            android:id="@+id/main_play3"
            style="@style/MainToggleBtn"
            android:text="3"/>

    </LinearLayout>

</RelativeLayout>