<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackBlack"
    android:keepScreenOn="true"
    >

    <ImageView
        android:id="@+id/main_setting"
        style="@style/MainBtn"
        android:src="@drawable/ic_settings_white"/>

    <ImageView
        android:id="@+id/main_exit"
        style="@style/MainBtn"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close_white"/>

    <ImageView
        android:id="@+id/main_volume_down"
        style="@style/MainVolumeBtn"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_volume_down_white"/>

    <ImageView
        android:id="@+id/main_volume_up"
        style="@style/MainVolumeBtn"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_volume_up_white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/clock_padding_bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_clock"
            android:text="12:34"
            style="@style/ClockMain"/>

        <TextView
            android:id="@+id/main_day"
            android:text="15.11.1234"
            style="@style/ClockDay"/>

        <TextView
            android:id="@+id/main_week_day"
            android:text="Monday"
            style="@style/ClockWeekDay"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_play_btn_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_play1"
            style="@style/MainToggleBtn"
            android:text="1"/>

        <Button
            android:id="@+id/main_play2"
            style="@style/MainToggleBtn"
            android:text="2"/>

        <Button
            android:id="@+id/main_play3"
            style="@style/MainToggleBtn"
            android:text="3"/>

        <Button
            android:id="@+id/main_play4"
            style="@style/MainToggleBtn"
            android:text="4"/>

    </LinearLayout>

</RelativeLayout>